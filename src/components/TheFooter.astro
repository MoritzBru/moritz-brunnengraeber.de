---
import IconTwitter from '~icons/ph/x-logo-duotone';
import IconGithub from '~icons/ph/github-logo-duotone';
import IconLinkedin from '~icons/ph/linkedin-logo-duotone';
import IconM from '~icons/mb/m';
import IconB from '~icons/mb/b';

const socialLinks = [
  {
    label: 'twitter',
    url: 'https://twitter.com/moritz_bru',
    Icon: IconTwitter,
  },
  {
    label: 'github',
    url: 'https://github.com/MoritzBru',
    Icon: IconGithub,  },
  {
    label: 'linkedin',
    url: 'https://www.linkedin.com/in/moritz-brunnengraeber/',
    Icon: IconLinkedin,  },
];
---

<footer class="bg-base-100 px-8 pb-12 pt-32 text-base-content">
  <div class="container flex flex-col items-center justify-around gap-8 sm:flex-row">
    <aside class="gap-px text-lg">
      <div class="mb-4 flex gap-1">
        <IconM class="size-8" /><IconB class="size-8" />
      </div>
      <p>Moritz Brunnengr√§ber</p>
      <p>2017 - {new Date().getFullYear()}</p>
      <a
        href="/legal-notice"
        class="dui-link"
      >
        Legal Notice</a
      >
    </aside>
    <ul class="flex gap-4">
      {
        socialLinks.map((item) => (
          <li>
            <a
              href={item.url}
              target="_blank"
              rel="noopener"
              class="dui-btn dui-btn-circle dui-btn-ghost"
              title={item.label}
            >
              <span class="sr-only">{item.label}</span>
              <item.Icon
                is:raw
                aria-hidden="true"
                class="size-8"
              />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>
