---
import IconTwitter from '~icons/ph/twitter-logo-duotone';
import IconGithub from '~icons/ph/github-logo-duotone';
import IconLinkedin from '~icons/ph/linkedin-logo-duotone';
import IconM from '~icons/mb/m';
import IconB from '~icons/mb/b';

const socialLinks = [
  {
    label: 'twitter',
    url: 'https://twitter.com/moritz_bru',
    Icon: IconTwitter,
    activeClass: 'hover:text-[#1da1f2] focus:text-[#1da1f2]',
  },
  {
    label: 'github',
    url: 'https://github.com/MoritzBru',
    Icon: IconGithub,
    activeClass: 'hover:text-[#000000] focus:text-[#000000]',
  },
  {
    label: 'linkedin',
    url: 'https://www.linkedin.com/in/moritz-brunnengraeber/',
    Icon: IconLinkedin,
    activeClass: 'hover:text-[#0a66c2] focus:text-[#0a66c2]',
  },
];
---

<footer class="bg-neutral px-8 py-12 text-neutral-content">
  <div class="container mx-auto flex flex-col items-center justify-around gap-8 sm:flex-row">
    <aside class="gap-px text-lg">
      <div class="mb-4 flex gap-1"><IconM class="h-8 w-8" /><IconB class="h-8 w-8" /></div>
      <p>Moritz Brunnengr√§ber</p>
      <p>2017 - {new Date().getFullYear()}</p>
      <a
        href="/legal-notice"
        class="dui-link"
      >
        Legal Notice
      </a>
    </aside>
    <ul class="flex gap-4">
      {
        socialLinks.map((item) => (
          <li>
            <a
              href={item.url}
              target="_blank"
              rel="noopener"
              class:list={['dui-btn dui-btn-circle dui-btn-ghost', item.activeClass]}
              title={item.label}
            >
              <span class="sr-only">{item.label}</span>
              <item.Icon
                is:raw
                aria-hidden="true"
                class="h-8 w-8"
              />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>
