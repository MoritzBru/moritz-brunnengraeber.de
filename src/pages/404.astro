---
import Layout from '@/layouts/Layout.astro';
import Prose from '@/components/Prose.astro';
---

<Layout title="404">
  <Prose class="container p-8">
    <div class="_404 mb-8 flex h-auto w-full gap-4">
      <svg
        class="_404-4"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 128 128"
      >
        <rect
          class="_4__bottom"
          x="64"
          y="96"
          width="64"
          height="32"
        ></rect>
        <polygon
          class="_4__slant"
          points="64 0 64 64 0 64 64 0"
        ></polygon>
        <rect
          class="_4__hz"
          y="64"
          width="128"
          height="32"
        ></rect>
        <rect
          class="_4__top"
          x="64"
          width="64"
          height="64"
        ></rect>
      </svg>
      <svg
        class="_404-40"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 128 128"
      >
        <defs>
          <circle
            id="_0__circle-template"
            cx="64"
            cy="64"
            r="64"
          ></circle>
          <clipPath id="_0__clip">
            <use href="#_0__circle-template"></use>
          </clipPath>
        </defs>
        <use
          class="_0__circle"
          href="#_0__circle-template"
        ></use>
        <g clip-path="url(#_0__clip)">
          <polygon
            class="_0__highlight"
            points="0 128 128 128 128 0 0 128"
          ></polygon>
        </g>
      </svg>
      <svg
        class="_404-404"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 128 128"
      >
        <rect
          class="_4__bottom"
          x="64"
          y="96"
          width="64"
          height="32"
        ></rect>
        <polygon
          class="_4__slant"
          points="64 0 64 64 0 64 64 0"
        ></polygon>
        <rect
          class="_4__hz"
          y="64"
          width="128"
          height="32"
        ></rect>
        <rect
          class="_4__top"
          x="64"
          width="64"
          height="64"
        ></rect>
      </svg>
    </div>
    <h1>Page Not Found</h1>
    <hr />
    <p class="text-xl">Sorry, but the page you were trying to view could not be found.</p>
  </Prose>
</Layout>

<style>
  ._404 {
    --c1: oklch(var(--p));
    --c2: oklch(var(--nc));
    --c3: oklch(var(--a));
  }

  ._404 ._4__bottom {
    fill: var(--c3);
  }

  ._404 ._4__top {
    fill: var(--c1);
  }

  ._404 ._4__hz {
    fill: var(--c2);
    transform-origin: bottom right;
  }

  ._404 ._4__slant {
    fill: var(--c3);
    transform-origin: bottom right;
  }

  ._404 ._0__circle {
    fill: var(--c2);
    transform-origin: bottom right;
  }

  ._404 ._0__highlight {
    fill: var(--c1);
    transform-origin: bottom right;
  }
</style>

<script>
  import anime from 'animejs/lib/anime.es.js';

  const tl = anime
    .timeline({
      duration: 300,
      easing: 'easeInOutQuad',
      direction: 'alternate',
      loop: true,
    })
    .add({
      targets: '._404-4 ._4__hz',
      translateY: ['25%', 0],
      scaleX: [0.5, 0.5],
    })
    .add(
      {
        targets: '._404-4 ._4__top',
        translateY: ['50%', 0],
      },
      '-=250'
    )
    .add({
      targets: '._404-4 ._4__hz',
      scaleX: [0.5, 1],
    })
    .add({
      targets: '._404-4 ._4__slant',
      scale: [0, 1],
    })
    .add(
      {
        targets: '._404-40 ._0__circle',
        scale: [0.5, 1],
        duration: 600,
      },
      '-=400'
    )
    .add(
      {
        targets: '._404-40 ._0__highlight',
        scale: [0, 1],
      },
      '-=300'
    )
    .add(
      {
        targets: '._404-404 ._4__hz',
        translateY: ['25%', 0],
        scaleX: [0.5, 0.5],
      },
      '-=600'
    )
    .add(
      {
        targets: '._404-404 ._4__top',
        translateY: ['50%', 0],
      },
      '-=250'
    )
    .add({
      targets: '._404-404 ._4__hz',
      scaleX: [0.5, 1],
    })
    .add({
      targets: '._404-404 ._4__slant',
      scale: [0, 1],
      endDelay: 700,
    });
</script>
